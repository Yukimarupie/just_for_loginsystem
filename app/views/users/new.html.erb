<h1>新規登録</h1>

<%= form_with model: @user, local: true do |f| %>
<!-- userコントローラーのnew入る。=> userモデルに飛ばす。local: true jsの非同期処理をなくす -->

    <%= f.label :name %> <!-- ラベルクリックで、入力モードになる --> 
    <%= f.text_field :name %>

    <%= f.label :email %> <!-- ラベルクリックで、入力モードになる --> 
    <%= f.email_field :email %><!-- ラベルクリックで、入力モードになる --> 

    <%= f.label :password %> <!-- ラベルクリックで、入力モードになる --> 
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %> <!-- ラベルクリックで、入力モードになる --> 
    <%= f.password_field :password_confirmation %>

    <%= f.submit %>
<% end %>
